# ============================================================================
# uW-Wrap Example Application Configuration
# ============================================================================

# Server Configuration
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Database Configuration
DB_TYPE=sqlite
# For SQLite:
SQLITE_FILE=./database.sqlite

# For MySQL (uncomment if using MySQL):
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=password
# DB_NAME=uw_wrap_db
# DB_CONNECTION_LIMIT=10

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Logging
ENABLE_LOGGING=true

# Development
NODE_ENV=development
