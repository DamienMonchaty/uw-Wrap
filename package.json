    "mysql2": "^3.14.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.52.0",
    "uws": "^200.0.0"
  },
  "devDependencies": {
    "@types/autocannon": "^7.12.7",
    "@types/node": "^22.15.30",
    "autocannon": "^8.0.0",
    "express": "^5.1.0",
    "fastify": "^5.3.3",
    "koa": "^3.0.0",
